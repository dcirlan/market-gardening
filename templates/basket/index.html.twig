{% extends 'base.html.twig' %}

{% block title %}Basket index{% endblock %}

{% block body %}
    <h1>Basket index</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th>
                <th>Creation_date</th> #}
                <th>Date de distribution</th>
                <th>Stock</th>
                {# <th>Description</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                {# <td>{{ basket.id }}</td>
                <td>{{ basket.creationDate ? basket.creationDate|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ basket.pickupDate ? basket.pickupDate|date('Y-m-d') : '' }}</td>
                <td>{{ basket.stock }}</td>
                {# <td>{{ basket.description }}</td> #}
                <td>
                    <a href="{{ path('basket_show', {'id': basket.id}) }}">Détail du panier</a>
                    {# <a href="{{ path('basket_edit', {'id': basket.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('basket_new') }}">Créer un nouveau panier</a>
{% endblock %}
