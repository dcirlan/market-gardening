{% extends 'base.html.twig' %}

{% block title %}Market Garden{% endblock %}

{% block body %}
    <h1>Bienvenue sur Market Garden</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    {% if app.user %}
                        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        {{ app.user.email }}
            <a href="{{ path('app_logout') }}"> Se d√©connecter</a>
    {% else %}
        <a href="{{ path('app_login') }}"> Se connecter</a>
    {% endif %}
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('post_new') }}">Create new</a>
    {% endif %}
{% endblock %}
